{
    "logging": {
        "logs": {
            "default": {
                "level": "DEBUG"
            }
        }
    },
    "apps": {
        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": [
                            "localhost",
                            "auth.localhost",
                            "leaf.localhost",
                            "ws.localhost",
                            "metrics.localhost",
                            "demo.localhost"
                        ],
                        "issuers": [
                            {
                                "module": "internal"
                            }
                        ],
                        "disable_ocsp_stapling": true
                    }
                ]
            }
        },
        "oauth2": {
            "endpoints": [
                {
                    "name": "az",
                    "store": {
                        "type": "jetstream",
                        "client": {
                            "servers": [
                                "nats://localhost:4222"
                            ],
                            "username": "OAUTH2",
                            "password": "OAUTH2"
                        }
                    },
                    "options": {
                        "cookie": {
                            "domains": [
                                "localhost",
                                ".localhost"
                            ],
                            "no_http_only": true
                        },
                        "email_domains": [
                            "*"
                        ],
                        "whitelist_domains": [
                            "localhost",
                            ".localhost"
                        ],
                        "extra_jwt_issuers": [
                            "https://sts.windows.net/<TENANT ID>/=<CLIENT ID>"
                        ],
                        "providers": [
                            {
                                "id": "azure-ad",
                                "name": "Azure AD",
                                "provider": "oidc",
                                "clientID": "<CLIENT ID>",
                                "clientSecret": "<CLIENT SECRET>",
                                "scope": "openid email profile",
                                "loginURL": "https://login.microsoftonline.com/<TENANT ID>/v2.0/oauth2/authorize",
                                "redeemURL": "https://login.microsoftonline.com/<TENANT ID>/v2.0/oauth2/token",
                                "profileURL": "https://graph.microsoft.com/v1.0/me",
                                "oidcConfig": {
                                    "issuerURL": "https://login.microsoftonline.com/<TENANT ID>/v2.0",
                                    "jwksURL": "https://login.microsoftonline.com/common/discovery/keys",
                                    "emailClaim": "email",
                                    "audienceClaims": [
                                        "aud"
                                    ],
                                    "userIDClaim": "email"
                                }
                            }
                        ]
                    }
                }
            ]
        },
        "nats": {
            "auth_service": {
                "internal_account": "AUTH",
                "handler": {
                    "module": "deny"
                },
                "policies": [
                    {
                        "match": [
                            {
                                "connect_opts": {
                                    "username": "APP"
                                }
                            }
                        ],
                        "handler": {
                            "module": "oauth2",
                            "endpoint": "az",
                            "account": "APP",
                            "template": {
                                "pub": {
                                    "allow": [
                                        "user.{oidc.session.email}.>"
                                    ]
                                },
                                "sub": {
                                    "allow": [
                                        "user.>"
                                    ]
                                },
                                "resp": {}
                            }
                        }
                    },
                    {
                        "match": [
                            {
                                "client_info": {
                                    "host": "127.0.0.1",
                                    "kind": "Client",
                                    "type": "nats"
                                },
                                "connect_opts": {
                                    "username": "SYS"
                                }
                            }
                        ],
                        "handler": {
                            "module": "allow",
                            "account": "SYS"
                        }
                    },
                    {
                        "match": [
                            {
                                "client_info": {
                                    "host": "127.0.0.1",
                                    "kind": "Client",
                                    "type": "nats"
                                },
                                "connect_opts": {
                                    "username": "OAUTH2",
                                    "password": "OAUTH2"
                                }
                            }
                        ],
                        "handler": {
                            "module": "allow",
                            "account": "OAUTH2"
                        }
                    },
                    {
                        "match": [
                            {
                                "connect_opts": {
                                    "username": "GUEST"
                                }
                            }
                        ],
                        "handler": {
                            "module": "allow",
                            "account": "GUEST",
                            "template": {
                                "subs": 50,
                                "payload": 8192
                            }
                        }
                    }
                ]
            },
            "server": {
                "name": "test",
                "tags": {
                    "env": "demo"
                },
                "max_control_line": 8388608,
                "debug": true,
                "trace": true,
                "http_port": 8222,
                "tls": {
                    "subjects": [
                        "localhost"
                    ]
                },
                "system_acccount": "SYS",
                "accounts": [
                    {
                        "name": "APP"
                    },
                    {
                        "name": "GUEST"
                    },
                    {
                        "name": "OAUTH2"
                    },
                    {
                        "name": "SYS"
                    }
                ],
                "jetstream": {},
                "mqtt": {},
                "leafnode": {
                    "tls": {
                        "subjects": [
                            "leaf.localhost"
                        ]
                    }
                },
                "websocket": {
                    "tls": {
                        "subjects": [
                            "ws.localhost"
                        ]
                    }
                },
                "metrics": {
                    "connz": true,
                    "connz_detailed": true
                }
            }
        },
        "http": {
            "servers": {
                "https": {
                    "listen": [
                        ":80",
                        ":443"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "host": [
                                        "metrics.localhost"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "oauth2_session",
                                    "endpoint": {
                                        "name": "az"
                                    }
                                },
                                {
                                    "handler": "metrics"
                                }
                            ],
                            "terminal": true
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "localhost"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "oauth2_session",
                                    "endpoint": {
                                        "name": "az"
                                    }
                                },
                                {
                                    "handler": "static_response",
                                    "status_code": 200,
                                    "headers": {
                                        "Content-Type": [
                                            "text/html; charset=utf-8"
                                        ]
                                    },
                                    "body": "<html><body><h1>Demo</h1><p>Run the following code snippet to try out NATS auth callout:</p></br><pre>const nats = await import(\"https://cdn.jsdelivr.net/npm/nats.ws@1.18.0/esm/nats.js\")</pre></br><pre>nc = await nats.connect(\n\t{\"servers\": \"wss://ws.localhost:10443\", \"user\": \"APP\", \"pass\": document.cookie}\n)</pre>\n"
                                }
                            ],
                            "terminal": true
                        }
                    ],
                    "metrics": {},
                    "logs": {}
                }
            }
        }
    }
}