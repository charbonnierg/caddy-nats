            },
            "server": {
                "name": "test",
                "tags": {
                    "env": "demo"
                },
                "debug": true,
                "http_port": 8222,
                "tls": {
                    "subjects": [
                        "local.quara-dev.com"
                    ]
                },
                "authorization": {
                    "users": [
                        {
                            "user": "auth",
                            "password": "auth"
                        }
                    ],
                    "auth_callout": {
                        "issuer": "ABZMXJGERX2OQDNDVOVZA7QW3QQVMZ5WERHZXVREUWCNXQQ2BZZFLVDT",
                        "auth_users": [
                            "auth"
                        ]
                    }
                },
                "jetstream": {},
                "mqtt": {},
                "leafnode": {
                    "tls": {
                        "subjects": [
                            "leaf.local.quara-dev.com"
                        ]
                    }
                },
                "websocket": {
                    "tls": {
                        "subjects": [
                            "ws.local.quara-dev.com"
                        ]
                    }
                },
                "metrics": {
